{
  "name": "global-cache-monorepo",
  "private": true,
  "version": "0.4.0",
  "packageManager": "pnpm@10.18.3",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vitalets/global-cache.git"
  },
  "scripts": {
    "lint": "eslint .",
    "tsc": "npm run build && tsc",
    "prettier": "prettier --check --ignore-unknown .",
    "prettier:w": "prettier --write --ignore-unknown .",
    "pw:install": "PLAYWRIGHT_SKIP_BROWSER_GC=1 npx playwright install chromium",
    "toc": "remark README.md --frail -o",
    "release": "release-it --only-version",
    "dev": "turbo watch build",
    "build": "turbo run build",
    "deps": "npx npm-check-updates -i --packageFile=\"{package.json,packages/*/package.json}\" --format group,dep,repo --cooldown 7",
    "test": "turbo run test --filter='./packages/*'"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.1",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.54.2",
    "@release-it/keep-a-changelog": "^7.0.0",
    "@types/node": "^20.19.19",
    "eslint": "^9.39.2",
    "eslint-plugin-playwright": "^2.5.0",
    "eslint-plugin-visual-complexity": "0.1.4",
    "globals": "^17.0.0",
    "knip": "^5.62.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "publint": "^0.3.16",
    "release-it": "^19.2.3",
    "remark-cli": "^12.0.1",
    "remark-section-toc": "^1.0.0",
    "remark-validate-links": "^13.1.0",
    "turbo": "latest",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.39.1",
    "vitest": "^4.0.17"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "printWidth": 100,
    "semi": true,
    "trailingComma": "all",
    "bracketSpacing": true
  },
  "remarkConfig": {
    "plugins": [
      "remark-section-toc",
      "remark-validate-links"
    ]
  }
}
